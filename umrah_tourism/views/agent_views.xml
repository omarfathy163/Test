<odoo>
  <record id="view_umrah_agent_tree" model="ir.ui.view">
    <field name="name">umrah.travel.agent.tree</field>
    <field name="model">umrah.travel.agent</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="type"/>
        <field name="license_no"/>
        <field name="cr_no"/>
        <field name="country_id"/>
        <field name="city"/>
      </tree>
    </field>
  </record>

  <record id="view_umrah_agent_form" model="ir.ui.view">
    <field name="name">umrah.travel.agent.form</field>
    <field name="model">umrah.travel.agent</field>
    <field name="arch" type="xml">
      <form string="Travel Agent">
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="type"/>
              <field name="parent_agent_id" attrs="{'invisible':[('type','=','main')]}"/>
              <field name="license_no"/>
              <field name="cr_no"/>
            </group>
            <group>
              <field name="country_id"/>
              <field name="state_id"/>
              <field name="city"/>
              <field name="street"/>
              <field name="phone"/>
              <field name="email"/>
              <field name="website"/>
            </group>
          </group>
          <notebook>
            <page string="Employees">
              <field name="employee_ids">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="email"/>
                  <field name="mobile"/>
                  <field name="permission"/>
                  <field name="user_id"/>
                </tree>
              </field>
            </page>
            <page string="Branches">
              <field name="branch_ids">
                <tree>
                  <field name="name"/>
                  <field name="city"/>
                  <field name="phone"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_umrah_agents" model="ir.actions.act_window">
    <field name="name">Travel Agents</field>
    <field name="res_model">umrah.travel.agent</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
